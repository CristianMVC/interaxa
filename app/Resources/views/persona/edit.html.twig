{% extends 'base.html.twig' %}

{% block body %}

<script>
$(document).ready(function(){

 
    if($('#abmbundle_persona_fechaFin_day').val() == ''){

       $('#abmbundle_persona_fechaFin_day').fadeTo( "slow", 0.33 );

       }

    if($('#abmbundle_persona_fechaFin_month').val() == ''){

       $('#abmbundle_persona_fechaFin_month').fadeTo( "slow", 0.33 );

       }

    if($('#abmbundle_persona_fechaFin_year').val() == ''){

       $('#abmbundle_persona_fechaFin_year').fadeTo( "slow", 0.33 );

       }

       $('#abmbundle_persona_fechaFin_day').change(function(){
         
         if($($(this)).val() == ''){

          $($(this)).fadeTo( "slow", 0.33 );
          
           $($(this)).fadeTo( "slow", 0.33 );
           $('#abmbundle_persona_fechaFin_month').val('');
           $('#abmbundle_persona_fechaFin_month').fadeTo( "slow", 0.33  );

           $('#abmbundle_persona_fechaFin_year').val('');
           $('#abmbundle_persona_fechaFin_year').fadeTo( "slow", 0.33  );

          }else
          {
           $($(this)).fadeTo( "slow", 1 );
           $('#abmbundle_persona_fechaFin_month').val(1);
           $('#abmbundle_persona_fechaFin_month').fadeTo( "slow", 1 );

           $('#abmbundle_persona_fechaFin_year').val(2000);
           $('#abmbundle_persona_fechaFin_year').fadeTo( "slow", 1 );
          }
      
        });


  $('#abmbundle_persona_fechaFin_month').change(function(){
         
         if($(this).val() == ''){

          $($(this)).fadeTo( "slow", 0.33 );
          $('#abmbundle_persona_fechaFin_day').val('');
          $('#abmbundle_persona_fechaFin_day').fadeTo( "slow", 0.33  );          
 
          $('#abmbundle_persona_fechaFin_year').val('');
          $('#abmbundle_persona_fechaFin_year').fadeTo( "slow", 0.33  );

          }else
          {
           $($(this)).fadeTo( "slow", 1 );
          $('#abmbundle_persona_fechaFin_day').val(1);
          $('#abmbundle_persona_fechaFin_day').fadeTo( "slow", 1  );          
 
          $('#abmbundle_persona_fechaFin_year').val(2000);
          $('#abmbundle_persona_fechaFin_year').fadeTo( "slow", 1  );
          }
         
         });


  $('#abmbundle_persona_fechaFin_year').change(function(){
         
         if($(this).val() == ''){

          $($(this)).fadeTo( "slow", 0.33 );
          $('#abmbundle_persona_fechaFin_day').val('');
          $('#abmbundle_persona_fechaFin_day').fadeTo( "slow", 0.33  );          
 
          $('#abmbundle_persona_fechaFin_month').val('');
          $('#abmbundle_persona_fechaFin_month').fadeTo( "slow", 0.33  );

          }else
          {
           $($(this)).fadeTo( "slow", 1 );
           $('#abmbundle_persona_fechaFin_day').val(1);
           $('#abmbundle_persona_fechaFin_day').fadeTo( "slow", 1  );          
 
           $('#abmbundle_persona_fechaFin_month').val(1);
           $('#abmbundle_persona_fechaFin_month').fadeTo( "slow", 1  );
          }
         
         });         


});




</script>

   
